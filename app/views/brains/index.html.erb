  <%= stylesheet_link_tag 'brains', media: 'all', 'data-turbolinks-track' => true %>
<%- end -%>

<%= content_tag :div, nil,
  id: 'brain-app',
  data: {
    lang: lang?(:ja) ? 'ja' : 'en'
  }
%>

