<%- content_for :stylesheet_in_head do -%>
  <%= stylesheet_link_tag 'brains/pages/application', media: 'all', 'data-turbolinks-track' => true %>
<%- end -%>

<%= content_tag :div, nil,
  id: 'brain-app',
  data: {
    lang: lang?(:ja) ? 'ja' : 'en'
  }
%>

<%- content_for :javascript_after_body do -%>
  <%-# TODO: for IE 11 -%>
  <%- if ie? -%>
    <script src="https://www.promisejs.org/polyfills/promise-6.1.0.min.js"></script>
  <%- end -%>
  <%= javascript_include_tag 'commons_chunk' %>
  <%= javascript_include_tag 'brains' %>
  <%- if Rails.env.production? -%>
    <%= render partial: 'partials/google_analytics' %>
  <%- end -%>
<%- end -%>
